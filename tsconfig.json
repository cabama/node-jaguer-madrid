{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "bin",
    "paths": {
      "@config/*": [
        "./config/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}